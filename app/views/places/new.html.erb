<h1>Create a new hur.io address shortlink</h1>

<%= form_for @place, url: {action: "create"}, html: {class: "place_form"} do |f| %>
	<%= label_tag(:alias, "hur.io/:") %>
	<%= f.text_field :alias, :placeholder => "mycrib" %>
	<%= label_tag(:name, "Name:") %>
  <%= f.text_field :name, id: "chosen-place-name", :placeholder => "(Optional) Name" %>
  <%= f.text_field :google_friendly_name, id: "chosen-place-google-friendly-name-field", :placeholder => "Google Friendly Name" %>
  <%= f.text_field :formatted_address, id: "chosen-place-formatted-address-field", :placeholder => "(Optional) Address" %>
  <%= f.text_field :lat, id: "chosen-place-lat", :placeholder => "Latitude" %>
  <%= f.text_field :long, id: "chosen-place-lng", :placeholder => "Longitude" %>
  <%= f.text_area :notes, id: "chosen-place-notes-field", :placeholder => "(Optional) Notes" %>
  <%= f.text_area :parking_notes, id: "chosen-place-parking-notes-field", :placeholder => "(Optional) Parking Notes" %>
  <%= f.submit "Create" %>
<% end %>

<a name="place"></a>	
<div class="row">
	<h2>Place</h2>
	<div style="height:500px" id="map-container">
		<input id="pac-input" class="controls" type="text"
		        placeholder="Enter a location">
		<div id="map-canvas"></div>
	</div>
</div>


